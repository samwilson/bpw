<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
          integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <title>{{page.metadata.title}} :: B.P.W.</title>
  </head>
  <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light container">
      <div class="container-fluid">
        <a class="navbar-brand" href="{{page.link('/index')}}.html">B.P.W.</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><a class="nav-link" href="{{page.link('/index')}}.html">Home</a></li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                  About
              </a>
              <ul class="dropdown-menu">
                  <li class="dropdown-item">
                      <a class="nav-link" href="{{ page.link('/bpw-family-public-site.pdf') }}" title="Download PDF">
                          Download as PDF
                          <img src="https://upload.wikimedia.org/wikipedia/commons/6/6c/Adobe_PDF_icon.svg" height="16" width="16" alt="PDF file type icon" />
                      </a>
                  </li>
                  <li><hr class="dropdown-divider"></li>
                  {% for p in database.query('SELECT * FROM pages WHERE id LIKE "/about/%" ORDER BY id ASC').fetchAll() %}
                      <li><a class="dropdown-item" href="{{ page.link(p.id) }}.html">{{ p.title }}</a></li>
                  {% endfor %}
              </ul>
            </li>
            <li class="nav-item"><a class="nav-link" href="{{page.link('/archives/index')}}.html">Archives</a></li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container clearfix">
      <h1 class="text-center my-5">{{page.metadata.title}}</h1>
      {% block body %}
        <div>{{page.body|md2html|raw}}</div>
      {% endblock %}
    </div>

    <footer class="container-fluid text-center bg-dark p-5 mt-5">
      <p class="d-print-none text-white">
        &middot;
        <a href="https://github.com/samwilson/bpw-public/edit/main/content{{ page.id }}.md" class="text-white">Edit this page</a>
        &middot;
        <a href="https://github.com/samwilson/bpw-public/issues" class="text-white">Website to-do list</a>
        &middot;
      </p>
      <ul class="d-none d-print-block">
        <li>Permanent URL: <code>{{ site.config.url }}{{ page.id }}.html</code></li>
        <li>Edit at <code>https://github.com/samwilson/bpw-public/edit/main/content{{ page.id }}{{ site.ext }}</code></li>
      </ul>
    </footer>

      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
              integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
  </body>
</html>
